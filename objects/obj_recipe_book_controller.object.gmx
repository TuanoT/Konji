    draw_set_colour(c_lime);
    draw_text(xx+144, yy+80, global.recipe_cost[i]);
    draw_set_colour(c_white);
    draw_text(xx+176, yy+80, '=');
    draw_sprite(global.item_sprite[global.recipe_result[i]], 0, xx+208, yy+80);
    
